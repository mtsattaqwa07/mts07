    <script>
      function login(event) {
        event.preventDefault();
        const password = document.getElementById("password").value;

        // Contoh validasi sederhana (opsional)
        if (password === "mtshebat") {
          window.location.href = "ortu.html";
        } else {
          alert("Password salah!");
        }

        return false;
      }
    </script>
